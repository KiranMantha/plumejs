    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest Test",
            "program": "${workspaceFolder}\\node_modules\\jest\\bin\\jest",
            "args": ["--runInBand", "--config=${workspaceFolder}\\jest.config.js"],
            "env": {
                "NODE_ENV": "test"
            },
            "cwd": "${workspaceRoot}",
            "stopOnEntry": false,
            "runtimeArgs": ["--nolazy"],
            "console": "internalConsole",
            "sourceMaps": false,
            "internalConsoleOptions": "openOnSessionStart"
        }
