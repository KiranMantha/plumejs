{
  "name": "plumejs",
  "version": "2.0.2",
  "description": "a light weight typescript framework to build single page applications.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/mocks/jestSetup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "projects": [
      {
        "displayName": "PLUMEJS",
        "testMatch": [
          "<rootDir>/__tests__/service.spec.ts"
        ]
      }
    ]
  },
  "scripts": {
    "start": "npm run serve",
    "serve": "webpack-dev-server --config webpack/webpack.server.config.js",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test-local": "jest",
    "build": "npm run tsc && npm run build:es2015 && npm run build:esm && npm run build:cjs",
    "tsc": "tsc",
    "build:es2015": "tsc --module es2015 --target es2015 --outDir dist/es2015",
    "build:esm": "tsc --module es2015 --target es5 --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es5 --outDir dist/cjs",
    "build:umd": "webpack dist/esm/index.js --format umd --name plumejs --sourceMap --output dist/umd/plumejs.js",
    "webpack": "webpack --config webpack/webpack.build.config.js",
    "patch-update": "npm version patch",
    "tag": "git push --follow-tags",
    "tag-release": "npm run patch-update && npm run tag"
  },
  "keywords": [
    "plumejs",
    "light-weight",
    "plume",
    "spa"
  ],
  "author": "KiranMantha <kiranv.mantha@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/KiranMantha/plumejs"
  },
  "bugs": {
    "url": "https://github.com/KiranMantha/plumejs/issues"
  },
  "homepage": "https://github.com/KiranMantha/plumejs#readme",
  "license": "ISC",
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "augmentor": "^0.2.6",
    "bootstrap": "^4.3.1",
    "lighterhtml-plus": "^0.15.2",
    "melanke-watchjs": "^1.5.0",
    "vanilla-i18n": "^1.0.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-typescript-metadata": "^0.2.2",
    "core-js": "^3.1.4",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "css-loader": "^3.1.0",
    "del": "^4.1.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "node-sass": "^4.12.0",
    "pre-build-webpack": "^0.1.0",
    "reflect-metadata": "^0.1.13",
    "sass-loader": "^7.1.0",
    "terser-webpack-plugin": "^1.3.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.2",
    "webpack-merge": "^4.2.1"
  }
}
