{
  "name": "plumejs",
  "version": "1.0.1",
  "description": "a light weight(5kb gzipped) framework to build spa",
  "main": "index.ts",
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/mocks/jestSetup.js"
    ],
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "projects": [
      {
        "displayName": "PLUMEJS",
        "testMatch": [
          "<rootDir>/__tests__/service.spec.ts"
        ]
      }
    ]
  },
  "scripts": {
    "start": "npm run build:min && npm run serve",
    "serve": "webpack-dev-server --config webpack.server.config.js",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test-local": "jest",
    "build": "run-p build:**",
    "build:min": "cross-env MIN=1 webpack",
    "build:hoist": "cross-env HOIST=1 webpack",
    "build:min:hoist": "cross-env MIN=1 HOIST=1 webpack"
  },
  "keywords": [
    "plumejs",
    "light-weight",
    "plume",
    "spa"
  ],
  "author": "KiranMantha <kiranv.mantha@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/KiranMantha/plumejs"
  },
  "bugs": {
    "url": "https://github.com/KiranMantha/plumejs/issues"
  },
  "homepage": "https://github.com/KiranMantha/plumejs#readme",
  "license": "ISC",
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "lighterhtml-plus": "^0.15.2",
    "melanke-watchjs": "^1.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-typescript-metadata": "^0.2.2",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "del": "^4.1.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "pre-build-webpack": "^0.1.0",
    "reflect-metadata": "^0.1.13",
    "terser-webpack-plugin": "^1.3.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4",
    "webpack-dev-server": "^3.7.2"
  }
}
