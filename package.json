{
  "name": "@plumejs/core",
  "version": "3.0.0-beta.1",
  "description": "A light weight web-components based typescript framework to build single page applications.",
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/index.js",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run lint && rimraf dist && ttsc",
    "build:tsc": "npm run lint && rimraf dist && tsc",
    "eslint:init": "eslint --init",
    "lint": "eslint . --ext .ts --fix",
    "patch-update": "npm version patch",
    "tag": "git push --follow-tags",
    "tag-release": "npm run patch-update && npm run tag"
  },
  "keywords": [
    "plumejs",
    "light-weight",
    "plume",
    "spa"
  ],
  "author": "KiranMantha <kiranv.mantha@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/KiranMantha/plumejs"
  },
  "bugs": {
    "url": "https://github.com/KiranMantha/plumejs/issues"
  },
  "homepage": "https://github.com/KiranMantha/plumejs#readme",
  "license": "MIT",
  "dependencies": {
    "@types/node": "^15.12.4",
    "@webcomponents/webcomponentsjs": "^2.5.0",
    "browser-or-node": "^1.3.0",
    "rxjs": "^7.1.0",
    "vanilla-i18n": "^1.0.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ttypescript": "^1.5.12",
    "typescript": "^4.3.4"
  }
}