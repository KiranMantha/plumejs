{
  "name": "plumejs",
  "version": "1.0.1",
  "description": "a light weight(5kb gzipped) framework to build spa",
  "main": "index.js",
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/mocks/jestSetup.js",
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/coverage",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "projects": [
      {
        "displayName": "PLUMEJS",
        "testMatch": [
          "<rootDir>/__tests__/*.spec.ts"
        ]
      }
    ]
  },
  "scripts": {
    "remove-testdb": "rimraf __tests__/*",
    "test": "jest --coverage --coverageReporters=text-lcov | coveralls",
    "test-local": "jest",
    "build": "run-p build:**",
    "build:es": "cross-env FORMAT=es webpack",
    "build:cjs": "cross-env FORMAT=cjs webpack",
    "build:es:min": "cross-env FORMAT=es MIN=1 webpack",
    "build:cjs:min": "cross-env FORMAT=cjs MIN=1 webpack",
    "build:es:hoist": "cross-env FORMAT=es HOIST=1 webpack",
    "build:cjs:hoist": "cross-env FORMAT=cjs HOIST=1 webpack",
    "build:es:min:hoist": "cross-env FORMAT=es MIN=1 HOIST=1 webpack",
    "build:cjs:min:hoist": "cross-env FORMAT=cjs MIN=1 HOIST=1 webpack"
  },
  "keywords": [
    "plumejs",
    "light-weight",
    "plume",
    "spa",
    "vanilla js"
  ],
  "author": "KiranMantha <kiranv.mantha@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/KiranMantha/plumejs"
  },
  "bugs": {
    "url": "https://github.com/KiranMantha/plumejs/issues"
  },
  "homepage": "https://github.com/KiranMantha/plumejs#readme",
  "license": "ISC",
  "dependencies": {
    "@webcomponents/webcomponentsjs": "^2.2.10",
    "lighterhtml-plus": "^0.15.2"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-decorators": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/jest": "^24.0.15",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^2.0.0",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "size-limit": "^1.3.7",
    "terser-webpack-plugin": "^1.3.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.4"
  }
}
