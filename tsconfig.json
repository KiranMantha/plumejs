{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": ["dom", "ESNext"],
    "moduleResolution": "node",
    "declaration": true,
    "inlineSourceMap": false,
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "./",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,    
    "importHelpers": true,
    "noEmitOnError": true,
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ]
  },
  "exclude": ["__tests__","dist", "node_modules"]
}