{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "inlineSourceMap": false,
    "declarationDir": "dist",
    "outDir": "dist",
    "rootDir": "./",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "noEmitOnError": true,
    "typeRoots": [
      "@types",
      "node_modules/@types",
      "node_modules/@abraham/reflection/src"
    ]
  },
  "exclude": [
    "__tests__",
    "dist",
    "node_modules"
  ]
}